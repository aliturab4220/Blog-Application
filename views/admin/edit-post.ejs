<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2 class="edit-post">View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">

  <label for="title"><b style="font-size: 30px;">Title</b></label>
  <input style="margin-top: 20px;" type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

  <label for="body"><b style="font-size: 30px;">Content</b></label>
  <pre><textarea style="margin-top: 20px; margin-bottom: 30px;" name="body" cols="50" rows="10"><%= data.body %></textarea></pre>

  <input type="submit" value="Update" class="btn" style="padding: 18px 40px;
  background-color: transparent;
  border-style: solid;
  border-width: 1px;
  font-size: 15px;
  border-radius: 10px;
  transition: all ease 0.25s;">

</form>